#:kivy 1.1.0

<LoadDialog>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		FileChooserListView:
			id: filechooser
			path: 'D:/AA/repo2/GItrepo/Dataset_Visualizer/Label'

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancel"
				on_release: root.cancel()

			Button:
				text: "Load"
				on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
	text_input: text_input
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"


		TextInput:
			id: output_format
			size_hint_y: None
			height: 100
			multiline: True
			text: "$filename { $x $y $w $h $label}"
		Spinner:
			id : label_spinner
			size_hint: None, None
			height: 30
			width: 100
			values:('XML' , 'TEXT')

		FileChooserListView:
			id: filechooser
			on_selection: text_input.text = self.selection and self.selection[0] or ''

		TextInput:
			id: text_input
			size_hint_y: None
			height: 30
			multiline: False

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancel"
				on_release: root.cancel()

			Button:
				text: "Save"
				on_release: root.save(filechooser.path, text_input.text, output_format.text)